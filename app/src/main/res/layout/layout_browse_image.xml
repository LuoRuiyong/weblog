<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/browse_image_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:visibility="gone"
    android:background="#000000">

    <com.luoruiyong.weblog.myview.SlideShowViewGroup
        android:id="@+id/image_viewgroup"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <TextView
        android:id="@+id/current_index"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:textColor="#ffffff"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="30dp"/>

    <ImageView
        android:id="@+id/save_image"
        android:layout_width="30dp"
        android:layout_height="25dp"
        android:padding="1dp"
        android:scaleType="centerInside"
        android:src="@drawable/download"
        android:background="@drawable/save_image_selector"
        android:layout_gravity="right"
        android:layout_marginTop="30dp"
        android:layout_marginRight="30dp"/>

    <TextView
        android:id="@+id/blog_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#555555"
        android:padding="5dp"
        android:layout_gravity="bottom"
        android:textSize="18sp"
        android:textColor="#ffffff"
        android:maxLines="4"
        android:ellipsize="end"
        android:lineSpacingMultiplier="1.1"
        android:text=""/>

